{
	"name": "frontend",
	"version": "0.10.0",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && npm run prepack",
		"build:meshtastic": "bash scripts/build-meshtastic-packages.sh",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"prepack": "svelte-kit sync && svelte-package && publint",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check ."
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"sideEffects": [
		"**/*.css"
	],
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"peerDependencies": {
		"svelte": "^5.46.0"
	},
	"devDependencies": {
		"@sveltejs/adapter-node": "^5.4.0",
		"@sveltejs/kit": "^2.22.0",
		"@sveltejs/package": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^6.0.0",
		"@tailwindcss/postcss": "^4.1.18",
		"@types/node": "^25.0.3",
		"autoprefixer": "^10.4.16",
		"dotenv": "^17.2.3",
		"postcss": "^8.4.32",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"publint": "^0.3.2",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"tailwindcss": "^4.1.17",
		"typescript": "^5.0.0",
		"vite": "^7.0.4"
	},
	"keywords": [
		"svelte"
	],
	"pnpm": {
		"onlyBuiltDependencies": [
			"esbuild"
		]
	},
	"dependencies": {
		"@humanspeak/svelte-markdown": "^0.8.13",
		"@meshtastic/core": "file:./local-packages/@meshtastic/core",
		"@meshtastic/transport-web-serial": "file:./local-packages/@meshtastic/transport-web-serial",
		"@sveltejs/svelte-json-tree": "^2.2.1",
		"esptool-js": "^0.5.7",
		"js-yaml": "^4.1.1",
		"jszip": "^3.10.1",
		"svelte-i18n": "^4.0.1",
		"svelte-jsoneditor": "^3.11.0"
	}
}
